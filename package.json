{
  "name": "jest-api-automation-testing",
  "version": "1.0.0",
  "description": "API SIT automation testing framework with Jest and Node.js (sanitized for public reference)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "mock": "node mock_server/server.js",
    "test": "jest --runInBand",
    "test:mock": "TARGET_BASE_URL=http://127.0.0.1:5050 jest --runInBand",
    "test:ci": "node -e \"require('http').get('http://localhost:3000/run-test?stage=' + (process.env.STAGE || 'dev'), r => { let d=''; r.on('data',c=>d+=c); r.on('end',()=>process.exit(JSON.parse(d).pass ? 0 : 1)); }).on('error',()=>process.exit(1))\"",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix"
  },
  "keywords": [
    "jest",
    "api",
    "automation",
    "testing",
    "sit"
  ],
  "author": "",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "setupFilesAfterEnv": ["jest-extended"],
    "globalSetup": "./jest-global-setup.js",
    "testTimeout": 30000
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "babel-jest": "^26.6.3",
    "dotenv": "^16.3.1",
    "jest": "26.2.2",
    "jest-extended": "^0.11.2",
    "jest-html-reporter": "^3.4.0",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.3.0",
    "koa-mount": "^4.0.0",
    "koa-router": "^12.0.0",
    "koa-static": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.2.4"
  }
}